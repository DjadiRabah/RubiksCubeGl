<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Preference
        android:selectable="false"
        android:title="SETTINGS" >

    </Preference>

    <PreferenceCategory
        android:title="Audio settings"
        app:iconSpaceReserved="false">

        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_preference_fx"
            android:summary="Enable/disable app sound effects."
            android:title="Sound effects"
            app:iconSpaceReserved="false" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="switch_preference_background"
            android:summary="Enable/disable app background music."
            android:title="Background music"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory android:title="Account settings"
        app:iconSpaceReserved="false">

        <Preference
            android:key="user"
            android:summary="Email"
            android:title="User"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="preference_login"
            android:summary="Connect your Google account to our app."
            android:title="Log In"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="preference_logout"
            android:summary="Disconnect your Google account from our app."
            android:title="Log Out"
            app:iconSpaceReserved="false" />

        <Preference
            android:key="preference_revoke"
            android:summary="Revoke our access to your Google account."
            android:title="Revoke access"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>


</PreferenceScreen>