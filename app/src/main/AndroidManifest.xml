<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="iutfbleau.rubikscube">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".controllers.activities.SolverActivity"></activity>
        <activity android:name=".controllers.activities.GeneratedCubeDemoActivity" />

        <service
            android:name=".audio.SoundService"
            android:enabled="true" />

        <activity
            android:name=".controllers.activities.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.activities.NavActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controllers.activities.CubeGeneratorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controllers.activities.GoogleSignInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controllers.activities.WelcomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".controllers.activities.CustomCameraActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>